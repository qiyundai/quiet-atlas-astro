---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
  title="Home"
  facet="home"
  description="Quiet Atlas is a studio with two creative outputs — web development and indie games. Calm, deliberate, and crafted."
>
  <div class="split-home">
    <!-- Central Brand -->
    <header class="split-brand">
      <h1 class="brand-name">Quiet Atlas</h1>
      <p class="brand-sub">Two disciplines. One studio.</p>
    </header>

    <!-- Web Dev Panel -->
    <a href="/web" class="split-panel panel-web" aria-label="Explore Web Development">
      <div class="panel-content">
        <span class="panel-label">Web Development</span>
        <h2 class="panel-title">
          Calm.<br />Deliberate.<br />Crafted.
        </h2>
        <p class="panel-desc">
          We build lasting websites for people who value substance over noise. Static architecture, git-based content, zero maintenance headaches.
        </p>
        <span class="panel-cta">
          Explore Web
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14" /><path d="m12 5 7 7-7 7" /></svg>
        </span>
      </div>
    </a>

    <!-- Games Dev Panel -->
    <a href="/games" class="split-panel panel-games" aria-label="Explore Game Development">
      <div class="panel-content">
        <span class="panel-label">Game Development</span>
        <h2 class="panel-title">
          Emotional.<br />Bold.<br />Expressive.
        </h2>
        <p class="panel-desc">
          Indie games made with soul, artistic vision, and a belief that wonder doesn't need to be outgrown.
        </p>
        <span class="panel-cta">
          Explore Games
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14" /><path d="m12 5 7 7-7 7" /></svg>
        </span>
      </div>
    </a>

    <!-- Footer -->
    <footer class="split-footer">
      <span>&copy; {new Date().getFullYear()} Quiet Atlas &middot; Ontario, Canada</span>
    </footer>
  </div>
</BaseLayout>

<style>
  /* ─── Split Layout ─── */
  .split-home {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: auto 1fr auto;
    min-height: 100vh;
    transition: grid-template-columns 0.6s var(--ease-gentle);
  }

  /* Hover expansion — subtle 50/50 → 53/47 shift */
  .split-home:has(.panel-web:hover) {
    grid-template-columns: 1.06fr 0.94fr;
  }
  .split-home:has(.panel-games:hover) {
    grid-template-columns: 0.94fr 1.06fr;
  }

  /* ─── Brand Header ─── */
  .split-brand {
    grid-column: 1 / -1;
    text-align: center;
    padding: var(--space-lg) var(--space-lg) var(--space-md);
    z-index: 10;
    background: linear-gradient(to right, #f7f7f5 50%, #08080c 50%);
  }

  .brand-name {
    font-family: var(--font-display);
    font-size: clamp(1.5rem, 3.5vw, 2.25rem);
    font-weight: 700;
    letter-spacing: -0.03em;
    margin-bottom: 0.25rem;
    color: #1a1a1a;
    /* Blend text for centered effect */
    background: linear-gradient(to right, #1a1a1a 45%, #e8e6e3 55%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .brand-sub {
    font-family: var(--font-sans);
    font-size: 0.78rem;
    font-weight: 400;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    margin: 0;
    color: transparent;
    background: linear-gradient(to right, #8a8a8a 45%, #5a5856 55%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* ─── Panels ─── */
  .split-panel {
    grid-row: 2;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-xl) var(--space-lg);
    text-decoration: none;
    position: relative;
    overflow: hidden;
    transition: all 0.5s var(--ease-gentle);
  }

  .panel-web {
    grid-column: 1;
    background: #f7f7f5;
    color: #1a1a1a;
  }

  .panel-games {
    grid-column: 2;
    background: #08080c;
    color: #e8e6e3;
    /* Subtle noise texture on games panel */
    background-image:
      url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)' opacity='0.03'/%3E%3C/svg%3E");
    background-color: #08080c;
    background-size: 256px;
  }

  /* Hover glow effects */
  .panel-web::before,
  .panel-games::before {
    content: '';
    position: absolute;
    inset: 0;
    opacity: 0;
    transition: opacity 0.5s var(--ease-gentle);
    pointer-events: none;
  }

  .panel-web::before {
    background: radial-gradient(ellipse at center, rgba(43, 108, 176, 0.04) 0%, transparent 70%);
  }

  .panel-games::before {
    background: radial-gradient(ellipse at center, rgba(255, 92, 138, 0.06) 0%, transparent 70%);
  }

  .split-panel:hover::before {
    opacity: 1;
  }

  .panel-content {
    max-width: 400px;
    text-align: left;
  }

  /* ─── Panel Typography ─── */
  .panel-label {
    display: inline-block;
    font-size: 0.68rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.18em;
    margin-bottom: var(--space-lg);
    opacity: 0.5;
  }

  .panel-web .panel-label {
    font-family: var(--font-sans);
    color: #2b6cb0;
    opacity: 0.7;
  }

  .panel-games .panel-label {
    font-family: var(--font-serif);
    color: #ff5c8a;
    opacity: 0.7;
  }

  .panel-title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 4.5vw, 3.5rem);
    font-weight: 700;
    line-height: 1.1;
    letter-spacing: -0.03em;
    margin-bottom: var(--space-lg);
  }

  .panel-web .panel-title { color: #1a1a1a; }
  .panel-games .panel-title { color: #e8e6e3; }

  .panel-desc {
    font-size: 0.95rem;
    line-height: 1.65;
    margin-bottom: var(--space-xl);
    max-width: 340px;
  }

  .panel-web .panel-desc {
    font-family: var(--font-sans);
    color: #4a4a4a;
  }

  .panel-games .panel-desc {
    font-family: var(--font-serif);
    color: #b0ada8;
  }

  /* ─── CTA ─── */
  .panel-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.02em;
    transition: all var(--duration-normal) var(--ease-gentle);
  }

  .panel-web .panel-cta {
    font-family: var(--font-sans);
    color: #2b6cb0;
  }

  .panel-games .panel-cta {
    font-family: var(--font-serif);
    color: #ff5c8a;
  }

  .panel-cta svg {
    transition: transform var(--duration-normal) var(--ease-gentle);
  }

  .split-panel:hover .panel-cta svg {
    transform: translateX(4px);
  }

  /* ─── Footer ─── */
  .split-footer {
    grid-column: 1 / -1;
    grid-row: 3;
    text-align: center;
    padding: var(--space-md) var(--space-lg);
    font-size: 0.75rem;
    letter-spacing: 0.04em;
    background: linear-gradient(to right, #f7f7f5 50%, #08080c 50%);
    color: transparent;
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .split-footer span {
    background: linear-gradient(to right, #8a8a8a 45%, #5a5856 55%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* ─── Mobile ─── */
  @media (max-width: 768px) {
    .split-home,
    .split-home:has(.panel-web:hover),
    .split-home:has(.panel-games:hover) {
      grid-template-columns: 1fr;
      grid-template-rows: auto auto auto auto;
    }

    .split-brand {
      grid-column: 1;
      grid-row: 1;
      background: #f7f7f5;
      padding: var(--space-lg) var(--space-md) var(--space-md);
    }

    .brand-name {
      background: none;
      -webkit-text-fill-color: #1a1a1a;
      color: #1a1a1a;
    }

    .brand-sub {
      background: none;
      -webkit-text-fill-color: #8a8a8a;
      color: #8a8a8a;
    }

    .panel-web {
      grid-column: 1;
      grid-row: 2;
    }

    .panel-games {
      grid-column: 1;
      grid-row: 3;
    }

    .split-footer {
      grid-column: 1;
      grid-row: 4;
      background: #08080c;
    }

    .split-footer span {
      background: none;
      -webkit-text-fill-color: #5a5856;
      color: #5a5856;
    }

    .panel-content {
      max-width: 100%;
      text-align: center;
    }

    .panel-desc {
      max-width: 100%;
      margin-left: auto;
      margin-right: auto;
    }

    .split-panel {
      padding: var(--space-xl) var(--space-lg);
      min-height: 50vh;
    }
  }
</style>
